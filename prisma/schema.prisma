generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

enum Role {
  admin
  client
}

model User {
  id        Int  @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(client)
  createdAt DateTime @default(now())

  // Relations
  invoice Invoice[]
}

model Invoice {
  id           Int  @id @default(autoincrement())
  clientId     Int
  createdAt    DateTime @default(now())
  invoiceImage String?

  // Relations

  user           User             @relation(fields: [clientId], references: [id])
  invoiceProduct InvoiceProduct[]
}

model InvoiceProduct {
  id        Int  @id @default(autoincrement())
  productId Int
  quantity  Int
  invoiceId Int

  //Relations

  invoice Invoice @relation(fields: [invoiceId], references: [id])
}

model Product {
  id          Int  @id @default(autoincrement())
  name        String
  description String?
  value       Float
  createdAt   DateTime @default(now())
}
